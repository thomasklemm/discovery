= form_for @label do |f|
  -if @label.errors.any?
    #error_explanation
      %h2= "#{pluralize(@label.errors.count, "error")} prohibited this label from being saved:"
      %ul
        - @label.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :repo_count
    = f.number_field :repo_count
  .field
    = f.label :watcher_count
    = f.number_field :watcher_count
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
