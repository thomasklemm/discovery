= form_for @category do |f|
  -if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :repo_count
    = f.number_field :repo_count
  .field
    = f.label :watcher_count
    = f.number_field :watcher_count
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
